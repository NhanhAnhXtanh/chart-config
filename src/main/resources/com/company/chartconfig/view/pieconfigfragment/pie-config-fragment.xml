<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <content>
        <vbox id="root" spacing="10">

            <nativeLabel text="Label Field"/>
            <div id="labelDropZone" css="border:1px dashed #888; padding:10px; height:40px;">
                <span id="labelValue"/>
            </div>

            <nativeLabel text="Value Field"/>
            <div id="valueDropZone" css="border:1px dashed #888; padding:10px; height:40px;">
                <span id="valueValue"/>
            </div>

        </vbox>
    </content>
</fragment>
