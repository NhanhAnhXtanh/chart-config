<?xml version="1.0" encoding="UTF-8"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <content>
        <!-- Root VBox -->
        <vbox id="root" width="100%" spacing="false" css="gap:12px; overflow: hidden;">

            <!-- X AXIS CONFIG -->
            <vbox width="100%" spacing="false" css="gap: 4px;">
                <span text="Trục X (X Axis)" css="font-weight: 600; font-size: 13px; color: #555;"/>

                <!-- Sử dụng class chung "chart-drop-zone" -->
                <div id="xDropZone" classNames="chart-drop-zone"/>
            </vbox>

            <!-- Y AXIS CONFIG -->
            <vbox width="100%" spacing="false" css="gap: 4px;">
                <span text="Trục Y (Y Axis)" css="font-weight: 600; font-size: 13px; color: #555;"/>

                <!-- Sử dụng class chung "chart-drop-zone" -->
                <div id="yDropZone" classNames="chart-drop-zone"/>
            </vbox>

        </vbox>
    </content>
</fragment>