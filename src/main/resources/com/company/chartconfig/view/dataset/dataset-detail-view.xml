<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://datasetDetailView.title"
      focusComponent="form">
    <data>
        <instance id="datasetDc"
                  class="com.company.chartconfig.entity.Dataset">
            <fetchPlan extends="_base"/>
            <loader id="datasetDl"/>
        </instance>

        <keyValueCollection id="schemaDc">
            <properties>
                <property name="name" datatype="string"/>
                <property name="type" datatype="string"/>
            </properties>
        </keyValueCollection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="datasetDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="sourceTypeField" property="sourceType"/>
            <textArea id="rawJsonField" height="9.5em" property="rawJson"/>
            <textArea id="schemaJsonField" height="9.5em" property="schemaJson"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="parseJsonBtn" text="Parse JSON"/>
            <button id="saveAndCloseButton" action="saveCloseAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
        <!-- Hiển thị schema parse ra -->
        <dataGrid id="schemaGrid"
                  dataContainer="schemaDc"
                  width="100%"
                  minHeight="10em">
            <columns>
                <column property="name" header="Field Name"/>
                <column property="type" header="Type"/>
            </columns>
        </dataGrid>
    </layout>
</view>
