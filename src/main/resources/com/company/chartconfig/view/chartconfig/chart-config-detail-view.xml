<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="Chart Config Detail"
      focusComponent="form">

    <data>
        <instance id="chartConfigDc"
                  class="com.company.chartconfig.entity.ChartConfig">
            <fetchPlan extends="_base">
                <property name="dataset" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="chartConfigDl"/>
        </instance>

        <collection id="datasetsDc"
                    class="com.company.chartconfig.entity.Dataset">
            <loader id="datasetsDl" readOnly="true">
                <query><![CDATA[select e from Dataset e]]></query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>

    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>

    <actions>
        <action id="saveCloseAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>

    <layout>
        <formLayout id="form" dataContainer="chartConfigDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>

            <!-- enumComboBox -->
            <comboBox id="chartTypeField"
                      property="chartType"
                      datatype="enum"
                      label="Chart Type"/>

            <!-- Pick dataset -->
            <entityPicker id="datasetField"
                          property="dataset"
                          label="Dataset">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>

            <!-- JSON settings (hidden) -->
            <textArea id="settingsJsonField"
                      property="settingsJson"
                      visible="false"/>
        </formLayout>

        <!-- Dynamic UI -->
        <vbox id="settingsBox" width="100%" padding="false"/>

        <hbox id="actions">
            <button id="saveAndCloseBtn" action="saveCloseAction"/>
            <button id="closeBtn" action="closeAction"/>
            <button id="renderChartBtn" text="Render Chart"/>
        </hbox>

        <vbox id="chartContainer" width="100%" height="100%"/>
    </layout>
</view>
