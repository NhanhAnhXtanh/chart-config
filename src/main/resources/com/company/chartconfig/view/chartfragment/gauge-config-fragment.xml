<?xml version="1.0" encoding="UTF-8"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <keyValueInstance id="gaugeSettingsDc">
            <properties>
                <property name="minVal" datatype="double"/>
                <property name="maxVal" datatype="double"/>
            </properties>
        </keyValueInstance>
    </data>

    <content>
        <vbox id="root" width="100%" spacing="false" padding="false" css="gap: 12px;">

            <!-- METRICS (Cho phép kéo nhiều) -->
            <vbox spacing="false" padding="false" css="gap: 4px;">
                <span text="Metrics (Indicators)" css="font-weight: 600; font-size: 13px; color: #333;"/>
                <div id="metricsDrop" classNames="chart-drop-zone"/>
            </vbox>

            <!-- FILTERS -->
            <vbox spacing="false" padding="false" css="gap: 4px;">
                <span text="Filters" css="font-weight: 600; font-size: 13px; color: #333;"/>
                <div id="filtersDrop" classNames="chart-drop-zone"/>
            </vbox>

            <!-- GAUGE OPTIONS -->
            <textField id="minField" label="Min Value" width="100%"
                       dataContainer="gaugeSettingsDc" property="minVal"/>
            <textField id="maxField" label="Max Value" width="100%"
                       dataContainer="gaugeSettingsDc" property="maxVal"/>
        </vbox>
    </content>
</fragment>